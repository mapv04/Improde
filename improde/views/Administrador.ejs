                        <br>
                        <div class="form-group col-lg-12 form-row">
                            <label for="nombreRevisor2">Nombre del revisor</label>
                            <input name="nombreRevisor2" type="text" class="form-control" required>
                        </div>
                        <div class="form-group col-lg-12 form-row">
                            <label for="email2">Email</label>
                            <input name="email2" type="email" class="form-control" required>
                        </div>
                        <div class="form-group col-lg-12 form-row">
                            <label for="password2">Password</label>
                            <input name="password2" type="text" class="form-control" required>
                        </div>


                        <br><br><br>
                        REVISOR #3
                        <br>
                        <div class="form-group col-lg-12 form-row">
                            <label for="nombreRevisor3">Nombre del revisor</label>
                            <input name="nombreRevisor3" type="text" class="form-control" required>
                        </div>
                        <div class="form-group col-lg-12 form-row">
                            <label for="email3">Email</label>
                            <input name="email3" type="email" class="form-control" required>
                        </div>
                        <div class="form-group col-lg-12 form-row">
                            <label for="password3">Password</label>
                            <input name="password3" type="text" class="form-control" required>
                        </div>
                        <br>
                        <button class="btn  btn-primary btn-lg">Agregar Revisores</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- jQuery CDN - Slim version (=without AJAX) -->
        <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
        <!-- Popper.JS -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ"
            crossorigin="anonymous"></script>
        <!-- Bootstrap JS -->
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm"
            crossorigin="anonymous"></script>

        <script type="text/javascript">
            $(document).ready(function () {
                $('#sidebarCollapse').on('click', function () {
                    $('#sidebar').toggleClass('active');
                });

                $(".trigger_popup_fricc").click(function () {
                    $('.hover_bkgr_fricc').show();
                    $('#id_proy').val($(this).closest('tr').find('td.id_p').text());
                });


                $(".trigger_popup_fricc2").click(function () {
                    $('.hover_bkgr_fricc2').show();
                    evaluacionRevisor($(this).closest('tr').find('td.id_p').text(), $(this).find('.id_revisor').val());
                });


                $('.popupCloseButton').click(function () {
                    $('.hover_bkgr_fricc').hide();
                    $('.hover_bkgr_fricc2').hide();
                });


            });

            function evaluacionRevisor(idProyecto, idRevisor){
                let idProyectoMin = idProyecto.replace('IPD18-','').match(/\d+/g)[0];
                $.get('/adminresultados',{ idProyectoMin, idRevisor}, function( data ) {
                    let respuesta = data.respuestas;
                    let calificacion = data.calificacion;

                    $('#respuesta1').text(respuesta[0].respuesta);
                    $('#respuesta2').text(respuesta[1].respuesta);
                    $('#respuesta3').text(respuesta[2].respuesta);
                    $('#respuesta4').text(respuesta[3].respuesta);
                    $('#respuesta5').text(respuesta[4].respuesta);
                    $('#respuesta6').text(respuesta[5].respuesta);
                    $('#respuesta7').text(respuesta[6].respuesta);
                    $('#respuesta8').text(respuesta[7].respuesta);
                    $('#respuesta9').text(respuesta[8].respuesta);

                    $('#calificacion1').text('CALIFICACION:  ' + calificacion[0].calificacion);
                    $('#calificacion2').text('CALIFICACION:  ' + calificacion[1].calificacion);
                    $('#calificacion3').text('CALIFICACION:  ' + calificacion[2].calificacion);
                    $('#calificacion4').text('CALIFICACION:  ' + calificacion[3].calificacion);
                    $('#calificacion5').text('CALIFICACION:  ' + calificacion[4].calificacion);
                    $('#calificacion6').text('CALIFICACION:  ' + calificacion[5].calificacion);
                    $('#calificacion7').text('CALIFICACION:  ' + calificacion[6].calificacion);
                    $('#calificacion8').text('CALIFICACION:  ' + calificacion[7].calificacion);
                    $('#calificacion9').text('CALIFICACION:  ' + calificacion[8].calificacion);
                    
                    $('#retro').text(data.retro[0].retro);

                }); 
            }
